    <div class="container" style="margin-top: 18vh;">
        <div class="mb-3 text-center">
            <h3>Complaint Details</h3>
        </div>

        <div class="d-flex flex-row justify-content-center">
            <div class="col-12 d-flex justify-content-center">Complaint Status :
                <% if(currComplaint.atr===""){%>
                    Not Solved <% }else{ %>
                        Solved
                    <% } %></div>
        </div>
        <% if(currentUser.isWarden){%>
            <h5 class="mt-5 mb-1">Complaint by: <%= currComplaint.name %>
            </h5>
            <h5 class="mt-2 mb-1">Contact: <%= currComplaint.contact %>
            </h5>
            <h5 class="mt-2 mb-4">Complaint from: <%= currComplaint.hostel %>
            </h5>
        <% } %>
        <h5 class="mt-2 mb-1">Complaint details</h5>
        <div class="d-flex flex-row justify-content-center ">
            <p>
                <%= currComplaint.complaint %>
            </p>
        </div>

        <% if(currentUser.isWarden && currComplaint.atr===""){%>
            <div class="m-4 text-center">
                <h3>Respond to Complaint</h3>
            </div>
            
            <form action="/complaint/<%= currComplaint.id %>/atr" method="post">
                
                <div class="form-group row">
                    <label for="inputATR" class="col-sm-2 col-form-label d-flex flex-row justify-content-center">Action
                        Taken
                        Report</label>
                        <div class="col-sm-10">
                            <textarea name="atr" class="form-control col-sm-10" id="inputATR"> </textarea>
                        </div>
                    </div>
                    
                    <div class="m-4 text-center">
                        <button class=" m-4 btn btn-info" type="submit" onclick="checkValidation">Submit</button>
                    </div>
                    
                </form>
                <% } %>
                <%if(currComplaint.atr!==""){  %>
                 ATR:   <span> <%= currComplaint.atr %> </span>
                    <% } %>

    </div>

    <footer class="d-flex flex-wrap text-center justify-content-between align-items-center py-3 mt-4  mb-0 border-top"
        style="background-color: #e3f2fd;">
        <p class="col-md-12 mb-0 text-muted">@SAC Portal</p>
    </footer>
