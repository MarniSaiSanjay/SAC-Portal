    <div style="margin-top: 18vh;">

        <div class="m-4 text-center">
            <h3>Complaint Form</h3>
        </div>


        <form action="/complaint/add" method="post">

            <div class="form-group row " style="margin-left: 20vw;">
                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="name" style="width: 60%;" class="form-control" id="inputName" required>
                </div>
            </div>

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="inputAdmNo" class="col-sm-2 col-form-label">AdmNo</label>
                <div class="col-sm-10">
                    <input type="text" name="admNumber" style="width: 60%;" class="form-control" id="inputAdmNo" required>
                </div>
            </div>

            <div class="form-group row " style="margin-left: 20vw;">
                <label for="inputHstl" class="col-sm-2 col-form-label">Hostel</label>
                <div class="col-sm-10">
                    <input type="text" name="hostel" style="width: 60%;" class="form-control" id="inputHstl" required>
                </div>
            </div>

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" name="email" style="width: 60%;" class="form-control" id="staticEmail" required>
                </div>
            </div>

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="inputContact" class="col-sm-2 col-form-label">Contact Number</label>
                <div class="col-sm-10">
                    <input type="number" name="contact" style="width: 60%;" class="form-control" id="inputContact" required>
                </div>
            </div>

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="inputComplaint" class="col-sm-2 col-form-label">Enter Complaint</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="complaint" style="width: 60%;" id="inputComplaint" required> </textarea>
                </div>
            </div>
            <div class="m-4 text-center">

                <button class=" m-4 btn btn-info" type="submit" onclick="checkValidation">Submit</button>
            </div>

        </form>

    </div>

  