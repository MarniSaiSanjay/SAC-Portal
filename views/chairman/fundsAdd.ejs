<% layout('layout/boilerplate') %>

    <% console.log(err) %>
     <% if (err!="") {  %> 
      <p>  "insufficient funds" </p>
    <% } %>
    <div style="margin-top: 18vh;">

        <div class="m-4 text-center">
            <h3>Allocate Funds</h3>
        </div>


        <form action="/chairman/funds" method="post">

            <div class="form-group row " style="margin-left: 20vw;">
                <label for="inputHstl" class="col-sm-2 col-form-label">Hostel</label>
                <div class="col-sm-10">
                    <input type="text" name="name" style="width: 60%;" class="form-control" id="inputHstl">
                </div>
            </div>

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="inputContact" class="col-sm-2 col-form-label">funds</label>
                <div class="col-sm-10">
                    <input type="number" name="funds" style="width: 60%;" class="form-control" id="inputContact">
                </div>
            </div>
            <div class="m-4 text-center">
                <button class=" m-4 btn btn-info" type="submit" >Submit</button>
            </div>

        </form>

    </div>

    <footer class="d-flex flex-wrap text-center justify-content-between align-items-center py-3 mt-4  mb-0 border-top"
        style="background-color: #e3f2fd;">
        <p class="col-md-12 mb-0 text-muted">@SAC Portal</p>
    </footer>