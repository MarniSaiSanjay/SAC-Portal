    <div class="container" style="margin-top: 18vh;">
        <div class="mb-3 text-center">
            <h3>Complaint Details</h3>
        </div>

        <div class="d-flex flex-row justify-content-center mt-4">

            <div class="card text-white mb-3 bg-info" style="max-width:24rem;">
                <div class="card-header">
                    <h5>Complaint Status: <% if(currComplaint.atr==="" ){%>
                        Not Solved <% }else{ %>
                            Solved
                            <% } %></h5>
                </div>
            </div>

        </div>
        <% if(currentUser.isWarden){%>
            <div class="mb-1">
                <h5>Complaint From</h5>
            </div>
            <div class="d-flex flex-row mt-4" style="font-size: large;">
                <div style="width:10vw;" class="m-2">
                    <b>
                        <p>Name</p>
                        <p>Contact</p>
                        <p>Hostel</p>
                    </b>
                </div>
            
                <div style="width:3vw" class="m-2">
                    <p>:</p>
                    <p>:</p>
                    <p>:</p>
                </div>
            
                <div style="width:30vw" class="m-2">
                    <p><%= currComplaint.name %></p>
                    <p><%= currComplaint.contact %></p>
                    <p><%= currComplaint.hostel %></p>
                </div>
            </div>
        <% } %>

        <div class="d-flex flex-row mt-4" style="font-size: large;">
            <div style="width:11vw;" class="m-2">
                <b>
                    <p>Complaint Details</p>
                    
                </b>
            </div>
            
            <div style="width:3vw" class="m-2">
                <p>:</p>
                
            </div>
            
            <div style="width:30vw" class="m-2">
                <p>
                    <%= currComplaint.complaint %>
                </p>
            </div>
        </div>

        <% if(currentUser.isWarden && currComplaint.atr===""){%>
            <div class="m-4 text-center">
                <h3>Respond to Complaint</h3>
            </div>
            
            <form action="/complaint/<%= currComplaint.id %>/atr" method="post">
                
                <div class="form-group row">
                    <label for="inputATR" class="col-sm-2 col-form-label d-flex flex-row justify-content-center">Action
                        Taken
                        Report</label>
                        <div class="col-sm-10">
                            <textarea name="atr" class="form-control col-sm-10" id="inputATR" required> </textarea>
                        </div>
                    </div>
                    
                    <div class="m-4 text-center">
                        <button class=" m-4 btn btn-info" type="submit" onclick="checkValidation">Submit</button>
                    </div>
                    
                </form>
                <% } %>
                <%if(currComplaint.atr!==""){  %>
                 ATR:   <span> <%= currComplaint.atr %> </span>
                    <% } %>

    </div>
