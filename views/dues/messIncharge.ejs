    <div style="margin-top: 18vh;">

        <div class="m-4 text-center">
            <h3>Mess Dues</h3>
        </div>


        <form action="/dues" method="post">

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="inputAdmNo" class="col-sm-2 col-form-label">AdmNo</label>
                <div class="col-sm-10">
                    <input type="text" style="width: 60%;" class="form-control" required id="inputAdmNo" 
                    name="admNumber" placeholder="AdmNo" required>
                </div>
            </div>

            <div class="form-group row " style="margin-left: 20vw;">
                <label for="inputAmount" class="col-sm-2 col-form-label">Amount</label>
                <div class="col-sm-10">
                    <input type="number" style="width: 60%;" class="form-control" required id="inputAmount" 
                    name="due" placeholder="Amount" required>
                </div>
            </div>

            <div class="form-group row" style="margin-left: 20vw;">
                <label for="inputMonth" class="col-sm-2 col-form-label">Month</label>
                <div class="col-sm-10">
                    <input type="string" class="form-control" style="width: 60%;" required id="inputMonth" 
                    name="month" placeholder="Month" required>
                </div>
            </div>
            <div class="m-4 text-center">

                <button class=" m-4 btn btn-info" type="submit">Submit</button>
            </div>

        </form>
    </div>

    <script src="index.js"></script>