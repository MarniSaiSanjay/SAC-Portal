<% layout('layout/boilerplate') %>

      <div class="container" style = "margin-top: 18vh; margin-bottom: 18vh;" id="body-content">

      <div >
        <div class="m-4 text-center">
        <h3 >Leaves Info</h3>
        </div>
        <% for( worker of workers) {%>
        <div class="card m-2">
        
            <div class="card-body d-flex justify-content-between">  
                <h6><%=worker.name %></h6>
                <ul>
                  <% if(worker.leaves.length==0){ %>
                    <li>No leaves taken</li>
                    <% }else{ %>
                <%for( leave of worker.leaves) {%>
                        <li><%=leave.date.toDateString() %></li>
                    <%}}%>
                </ul>
            </div>
          </div>
        </div>
        <%} %>
     </div>
      
        <footer class=" fixed-bottom d-flex flex-wrap text-center justify-content-between align-items-center py-3 mt-4  mb-0 border-top" style="background-color: #e3f2fd;" id="footer">
          <p class="col-md-12 mb-0 text-muted">@SAC Portal</p>
        </footer>